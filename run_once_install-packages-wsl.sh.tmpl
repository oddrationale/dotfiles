{{- if eq .context "wsl" -}}
#!/bin/bash
# Prerequisites: Homebrew and chezmoi (brew install chezmoi)
set -euo pipefail

echo "==> Installing WSL packages..."

brew install \
    fnm \
    oh-my-posh \
    pnpm \
    ripgrep \
    uv

# --- Node via fnm ---
if ! fnm list | grep -q "v24"; then
    echo "==> Installing Node LTS via fnm..."
    fnm install --lts
fi

echo "==> WSL packages done!"
{{ end -}}
