# ~/.bashrc

{{- if eq .context "termux" }}
# --- Timezone (oh-my-posh needs $TZ on Termux) ---
export TZ=$(getprop persist.sys.timezone)
{{- end }}

# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac

# --- History ---
HISTCONTROL=ignoreboth:erasedups
HISTSIZE=50000
HISTFILESIZE=50000
HISTTIMEFORMAT="%F %T "
shopt -s histappend
# Share history across sessions
PROMPT_COMMAND="history -a; history -n${PROMPT_COMMAND:+; $PROMPT_COMMAND}"

# --- Shell Options ---
shopt -s checkwinsize
shopt -s cdspell dirspell   # autocorrect typos in cd and completion
shopt -s globstar           # enable ** recursive globbing

# Lesspipe
[ -x /usr/bin/lesspipe ] && eval "$(SHELL=/bin/sh lesspipe)"

# --- Colors ---
if [ -x /usr/bin/dircolors ]; then
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
    alias ls='ls --color=auto'
    alias grep='grep --color=auto'
    alias fgrep='fgrep --color=auto'
    alias egrep='egrep --color=auto'
fi

export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'

# --- Aliases ---
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# Safety
alias cp='cp -i'
alias mv='mv -i'
alias chmod='chmod --preserve-root'
alias chown='chown --preserve-root'
alias chgrp='chgrp --preserve-root'

# Git
alias gs='git status'
alias gd='git diff'
alias gds='git diff --staged'
alias gl='git log --oneline --graph --decorate'
alias ga='git add'
alias gc='git commit'
alias gp='git push'
alias gpull='git pull'
alias gco='git checkout'
alias gb='git branch'

{{- if eq .context "termux" }}

# Termux
alias storage='cd /storage/emulated/0'
{{- end }}

# Auto-ls on cd
cd() {
    builtin cd "$@" && ls
}

# --- Bash Completion ---
if ! shopt -oq posix; then
    if [ -f /usr/share/bash-completion/bash_completion ]; then
        . /usr/share/bash-completion/bash_completion
    elif [ -f /etc/bash_completion ]; then
        . /etc/bash_completion
    fi
fi

# --- Environment ---

# pnpm
export PNPM_HOME="$HOME/.local/share/pnpm"
case ":$PATH:" in
    *":$PNPM_HOME:"*) ;;
    *) export PATH="$PNPM_HOME:$PATH" ;;
esac

export PATH="$HOME/.local/bin:$PATH"

{{- if eq .context "wsl" }}

# WSL-specific
export PATH="$HOME/.aspire/bin:$PATH"
{{- end }}

# fnm (Node version manager)
if command -v fnm &> /dev/null; then
    eval "$(fnm env --use-on-cd --shell bash)"
fi

{{- if eq .context "wsl" }}
# Linuxbrew AFTER fnm so brew tools (e.g. pnpm) win over corepack shims
eval "$(/home/linuxbrew/.linuxbrew/bin/brew shellenv)"
{{- end }}

# Oh My Posh
if command -v oh-my-posh &> /dev/null; then
    eval "$(oh-my-posh init bash --config "$HOME/.config/oh-my-posh/oddrationale.omp.json")"
fi

# OpenClaw completions
if [ -f "$HOME/.openclaw/completions/openclaw.bash" ]; then
    source "$HOME/.openclaw/completions/openclaw.bash"
fi
