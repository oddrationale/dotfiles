{{- if eq .context "termux" -}}
#!/usr/bin/env bash
# Prerequisites: chezmoi (pkg install chezmoi)
set -euo pipefail

echo "==> Installing Termux packages..."

pkg update -y
pkg install -y \
    build-essential \
    fd \
    git \
    neovim \
    nodejs-lts \
    oh-my-posh \
    openssh \
    python \
    ripgrep \
    termux-api \
    uv

echo "==> Setting up storage access..."
if [ ! -d ~/storage ]; then
    termux-setup-storage
fi

echo "==> Termux packages done!"
{{ end -}}
