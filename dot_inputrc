# Case-insensitive tab completion
set completion-ignore-case on

# Treat hyphens and underscores as equivalent when completing
set completion-map-case on

# Show all matches at once if ambiguous (instead of bell + double-tab)
set show-all-if-ambiguous on

# Color files by type during completion (like ls)
set colored-stats on

# Append slash to directories during completion
set mark-directories on
set mark-symlinked-directories on

# Show common prefix in color for ambiguous completions
set colored-completion-prefix on

# Up/Down searches history filtered by what you've typed so far
"\e[A": history-search-backward
"\e[B": history-search-forward

# Bracketed paste mode (prevents pasted text from executing prematurely)
set enable-bracketed-paste on
