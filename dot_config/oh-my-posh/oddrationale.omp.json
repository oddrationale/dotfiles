{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "palette": {
    "background": "#282a36",
    "foreground": "#f8f8f2",
    "comment": "#6272a4",
    "cyan": "#8be9fd",
    "green": "#50fa7b",
    "orange": "#ffb86c",
    "pink": "#ff79c6",
    "purple": "#bd93f9",
    "red": "#ff5555",
    "yellow": "#f1fa8c"
  },
  "blocks": [
    {
      "alignment": "left",
      "type": "prompt",
      "segments": [
        {
          "type": "os",
          "style": "diamond",
          "leading_diamond": "\ue0b6",
          "foreground": "p:foreground",
          "background": "p:comment",
          "template": " {{ if .WSL }}\ue712 {{ end }}{{ .Icon }} "
        },
        {
          "type": "session",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:foreground",
          "background": "p:comment",
          "template": "{{ .UserName }} "
        },
        {
          "type": "path",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:foreground",
          "background": "p:purple",
          "properties": {
            "style": "folder"
          },
          "template": " {{ .Path }} "
        },
        {
          "type": "git",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:foreground",
          "background": "p:orange",
          "properties": {
            "branch_icon": "\ue725 ",
            "fetch_stash_count": true,
            "fetch_status": true
          },
          "template": " {{ .HEAD }}{{ if .BranchStatus }} {{ .BranchStatus }}{{ end }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0 }} \ueb4b {{ .StashCount }}{{ end }} "
        },
        {
          "type": "node",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:foreground",
          "background": "p:cyan",
          "template": " \ue718 {{ .Full }} "
        },
        {
          "type": "status",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:foreground",
          "background": "p:green",
          "background_templates": [
            "{{ if gt .Code 0 }}p:red{{ end }}"
          ],
          "properties": {
            "always_enabled": true
          },
          "template": " {{ if gt .Code 0 }}\uf00d {{ reason .Code }}{{ else }}\uf00c{{ end }} "
        },
        {
          "type": "executiontime",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "p:background",
          "background": "p:yellow",
          "properties": {
            "threshold": 3000,
            "style": "roundup"
          },
          "template": " \uf253 {{ .FormattedMs }} "
        },
        {
          "type": "time",
          "style": "diamond",
          "trailing_diamond": "\ue0b0",
          "foreground": "p:foreground",
          "background": "p:pink",
          "properties": {
            "time_format": "15:04"
          },
          "template": " \u2665 {{ .CurrentDate | date .Format }} "
        }
      ]
    },
    {
      "alignment": "left",
      "type": "prompt",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "p:purple",
          "template": "❯ "
        }
      ]
    }
  ],
  "transient_prompt": {
    "foreground": "p:purple",
    "template": "❯ "
  },
  "secondary_prompt": {
    "foreground": "p:comment",
    "template": "❯❯ "
  },
  "final_space": true,
  "version": 3
}
